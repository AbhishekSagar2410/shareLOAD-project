                <span class="connectspan">
                    <a href="https://www.instagram.com/l_mr_ocean_l/" target="_blank"><i
                            class="fab fa-instagram myconnecticon"></i></a>
                    <a href="https://www.facebook.com/abhishek.sagar.50364/" target="_blank"><i
                            class="fab fa-facebook-f myconnecticon"></i></a>
                    <a href="https://twitter.com/Mr_OceanAbhi" target="_blank"><i
                            class="fab fa-twitter myconnecticon"></i></a>

                </span>
            </div>

        </div>

        <!-- Copyright -->
    </footer>
    <!-- footer container end -->


    <script src="js/index.js"></script>
    <script src="js/jquery-3.5.1.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>